<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" minHeight="400.0" minWidth="400.0" styleClass="login-grid" stylesheets="login_style.css" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lcontvir_jaguerher.proyect_pilot.LoginController">

    <Label minHeight="25.0" text="Usuario:" textFill="white" GridPane.halignment="CENTER" GridPane.rowIndex="1">
        <font>
            <Font size="16" />
        </font>
    </Label>
    <TextField fx:id="userTextField" GridPane.halignment="CENTER" GridPane.rowIndex="2">
      <font>
         <Font size="16.0" />
      </font></TextField>

    <Label minHeight="25.0" text="Contraseña:" textFill="white" GridPane.halignment="CENTER" GridPane.rowIndex="3">
        <font>
            <Font size="16" />
        </font>
    </Label>
    <PasswordField fx:id="passwordField" GridPane.halignment="CENTER" GridPane.rowIndex="4">
      <font>
         <Font size="16.0" />
      </font></PasswordField>

    <Button minHeight="35.0" onAction="#loginButtonAction" styleClass="login-button" text="Iniciar Sesión" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="6">
      <font>
         <Font size="16.0" />
      </font></Button>

    <Text fx:id="errorText" fill="RED" styleClass="error-text" textAlignment="CENTER" wrappingWidth="348.0" GridPane.halignment="CENTER" GridPane.rowIndex="7" />
   <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>
</GridPane>
